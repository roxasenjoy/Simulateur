{% extends 'simulation/simulation.html.twig' %}

{% block form_css %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/form/sections/verificationCode.css') }}">
{% endblock %}

{% block title %} SimulInvest - Vérification {% endblock %}

{% block content %}

    <section class="all_content">
        <header class="text-center">
            <img src="../../images/form/logo.svg" src="{{asset('images/form/logo.svg')}}" alt="logo_header">
        </header>

        <div class="content">
            <h1 class="title"> Vérification du numéro de téléphone </h1>
            <p class="texte"> Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                Donec sed gravida quam. Integer vitae cursus erat. Aenean
                efficitur massa vehicula mauris ullamcorper, quis scelerisque risus tincidunt.
                Vestibulum condimentum libero eu nulla molestie accumsan. Nam id viverra orci.
            </p>

            <div class="verification">
                {% for message in app.flashes('success') %}
                    <div class="flash-notice alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="flash-notice alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}


                <p class="verification_presentation"> Entrer votre code de vérification </p>
                <form action="{{ url('verify_code') }}" method="get" class="verification_form">
                    <div class="verification_code">
                        <input type="text" class="" name="verify_code" placeholder="Code de vérification">
                    </div>

                    <div class="verification_submit">
                        <button type="submit" class=""> <i class="fas fa-angle-right"></i> </button>
                    </div>
                </form>

            </div>
        </div>


    </section>


