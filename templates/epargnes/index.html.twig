{% extends 'base.html.twig' %}

{% block title %}Epargnes index{% endblock %}

{% block body %}
    <h1>Epargnes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant</th>
                <th>Apport</th>
                <th>reductionImpot</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for epargne in epargnes %}
            <tr>
                <td>{{ epargne.id }}</td>
                <td>{{ epargne.montant }}</td>
                <td>{{ epargne.apport }}</td>
                <td>{{ epargne.reductionImpot }}</td>
                <td>
                    <a href="{{ path('epargnes_show', {'id': epargne.id}) }}">show</a>
                    <a href="{{ path('epargnes_edit', {'id': epargne.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('epargnes_new') }}">Create new</a>
{% endblock %}
